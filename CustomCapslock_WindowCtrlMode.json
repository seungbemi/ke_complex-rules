    "rules": [
        {
            "description": "CustomCapsLock | WindowCtrlMode : right_command ## Mandatory Field ##",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "name": "capslock_mode",
                            "type": "variable_unless",
                            "value": 0
                        }
                    ],
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "capslock_mode",
                                "value": 3
                            }
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
